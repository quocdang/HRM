<UserControl x:Class="HRM.GUI.History"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HRM.GUI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" Background="White">
    <Grid>
        <DataGrid x:Name="Grid" CanUserAddRows="True" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Mã Nhân Viên" Binding="{Binding  EmployeeID}"/>
                <DataGridTextColumn Header="Từ ngày" Binding="{Binding FromDate}"/>
                <DataGridTextColumn Header="Tới Ngày" Binding="{Binding ToDate}"/>
                <DataGridTextColumn Header="Nơi làm việc" Binding="{Binding Place}"/>
                <DataGridTextColumn Header="Vị trí công việc" Binding="{Binding Position}"/>
                <DataGridTextColumn Header="Lý do nghĩ việc" Binding="{Binding Reason}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
