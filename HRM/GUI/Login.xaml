<Window x:Class="HRM.GUI.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HRM.GUI"
        mc:Ignorable="d"
        Title="Login" Height="300" Width="300">
    <Grid>
        <Button x:Name="button" Content="Login" HorizontalAlignment="Left" Margin="160,150,0,0" VerticalAlignment="Top" Width="75" Click="button_Click"/>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="23" Margin="125,60,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="label" Content="Tài Khoản" HorizontalAlignment="Left" Margin="40,60,0,0" VerticalAlignment="Top"/>
        <Label x:Name="label_Copy" Content="Mật Khẩu" HorizontalAlignment="Left" Margin="40,101,0,0" VerticalAlignment="Top"/>
        <PasswordBox x:Name="passwordBox" HorizontalAlignment="Left" Margin="125,101,0,0" VerticalAlignment="Top" Width="120" Height="26"/>

    </Grid>
</Window>
